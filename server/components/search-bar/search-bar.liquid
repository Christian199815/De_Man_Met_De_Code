<section class="search-component" id="searchComponent" aria-label="Project zoeken">
    <form class="search-form" role="search" onsubmit="event.preventDefault();">
      <div class="search-container">
        <label for="projectSearch" class="visually-hidden">Zoek projecten</label>
        
        <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        
        <input 
          type="search" 
          id="projectSearch" 
          class="search-input" 
          placeholder="Zoek op projectnaam..." 
          aria-label="Zoek projecten"
          autocomplete="off"
        >
        
        <button 
          id="clearSearch" 
          class="clear-search-btn" 
          type="button" 
          aria-label="Zoekopdracht wissen"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
    </form>
  </section>