<div class="category-filter">
  <h2>Filter Projecten</h2>
  
  <div id="filterButtons" class="filter-buttons">
    <div class="radio-group">
      <input type="radio" id="category-all" name="category-filter" value="all" class="filter-radio" checked>
      <label for="category-all" class="filter-btn" data-category="all">
        All
      </label>
    </div>
    
    {% for category in categories %}
      <div class="radio-group">
        <input type="radio" id="category-{{ category | handleize }}" name="category-filter" value="{{ category }}" class="filter-radio">
        <label for="category-{{ category | handleize }}" class="filter-btn" data-category="{{ category }}">
          {{ category }}
        </label>
      </div>
    {% endfor %}
  </div>
  
  {% if projects.size > 0 %}
    <div id="visibleCount" class="visible-count">{{ projects.size }} projecten zichtbaar</div>
  {% endif %}
</div>